<div class="container mt-5">
  <h4 class="text-center mb-4"><%= t('.available_projects') unless project_owner_signed_in? %></h4>
  
  <div class="row">
    <% @projects.each do |project| %>
      <% if developer_signed_in? %>
        <div class="col-md-6 col-lg-4 mb-4">
          <div class="card h-100 shadow-sm rounded">
            <div class="card-body">
              <h5 class="card-title"><%= project.title %></h5>
              <p class="card-text"><%= project.description %></p>
              <a href=<%= user_project_path(project)%> class="btn btn-primary">Ver Informações do Projeto</a>
            </div>
          </div>
        </div>
      <% end %>
      
      <% unless developer_signed_in? || project_owner_signed_in? %>
        <div class="col-md-6 col-lg-4 mb-4">
          <div class="card h-100 shadow-sm rounded">
            <div class="card-body">
              <h5 class="card-title"><%= project.title %></h5>
              <p class="card-text"><%= project.description %></p>
              <a href=<%= project_path(project)%> class="btn btn-primary">Ver Informações do Projeto</a>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
