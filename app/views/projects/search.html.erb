<h3 class="text-center my-4">Projetos Encontrados</h3>

<div class="container">
  <div class="row">
    <% @projects.each do |project| %>
      <div class="col-md-4 mb-4">
        <div class="card h-100">
          <div class="card-body d-flex flex-column">
            <h5 class="card-title text-center mb-4"><%= project.title %></h5>
            <div class="mt-auto text-center">
              <%= link_to 'Ver Detalhes', user_project_path(project), class: 'btn btn-outline-dark' %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
