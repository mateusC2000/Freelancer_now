<div class="container mt-5">
  <h3 class="text-center mb-4"><%= t('.my_proposals') %></h3>

  <% if @proposals.empty? %>
    <div class="alert alert-warning text-center" role="alert">
      <h4><%= t('.proposals_empty') %></h4>
    </div>
  <% else %>
    <div class="row">
      <% @proposals.each do |proposal| %>
        <div class="col-md-4">
          <div class="card border-dark mb-4">
            <div class="card-header">
              <%= "Proposta #{proposal.id}" %>
            </div>
            <div class="card-body text-dark">
              <h5 class="card-title">
                <%= link_to proposal.project.title, user_project_proposal_path(proposal.project, proposal), class: 'text-decoration-none' %>
              </h5>
              <p class="card-text">
                <%= "#{t('.status')}: #{proposal.class.human_enum_name(:status, proposal.status)}" %>
              </p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
