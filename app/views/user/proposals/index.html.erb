<h3 class="text-center"><%= t('.my_proposals') %></h3>

<% if @proposals.empty? %>
  <h4><%= t('.proposals_empty') %></h4>
<% else %>
  <% @proposals.each do |proposal| %>
    <div class="card border-dark mb-3" style="max-width: 18rem;">
      <div class="card-header"><%= "Proposta #{proposal.id}" %></div>
      <div class="card-body text-dark">
        <h5 class="card-title"><%= link_to proposal.project.title, user_project_proposal_path(proposal.project, proposal) %></h5>
        <p class="card-text"><%= "#{t('.status')}: #{proposal.class.human_enum_name(:status, proposal.status)}" %></p>
      </div>
    </div>
  <% end %>
<% end %>
